doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet",
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
        crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
        crossorigin="anonymous")
    title TODOリスト
  body.container
    div.my-5
        form(action="/", method="post") 
            span.mx-3 TODO
            input(type="text", name="todo", id="text").mx-3
            button(type="submit", id="addButton").btn.btn-primary.mx-3 追加

    //- div.card
    //-     ul.list-group.list-gorup-flush
    //-         each todo in todos
    //-             li.list-group-item #{todo.content}

    div 
        table.table.table-bordered
            each todo in todos 
                tr 
                    td(width=300) #{todo.content}
                    td(width=100)
                        div(align="center")
                            form(action="/delete", method="post")
                                input(type="hidden", name="id" value=todo.id)
                                button(type="submit").btn.btn-danger 削除
